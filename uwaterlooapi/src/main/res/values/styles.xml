<resources>

    <style name="AppBaseTheme" parent="android:Theme.DeviceDefault.Light"/>

    <style name="AppCommon" parent="AppBaseTheme">
        <item name="android:activatedBackgroundIndicator">@drawable/uw_yellow_selector</item>
        <item name="android:actionBarStyle">@style/BaseActionBar</item>
    </style>

    <style name="AppTheme" parent="AppCommon">
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.DialogWhenLarge" parent="android:Theme.DeviceDefault.Light.DialogWhenLarge">
    </style>

    <style name="BaseActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:displayOptions">showTitle</item>
        <item name="android:background">@color/uw_yellow</item>
    </style>

    <style name="PropertyLayout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/property_layout_margin</item>
        <item name="android:layout_marginRight">@dimen/property_layout_margin</item>
    </style>

    <style name="PropertyLayout.Key">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PropertyLayout.Value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
