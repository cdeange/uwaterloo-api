<resources>

    <style name="AppCommon" parent="Theme.AppCompat.Light">
        <item name="android:activatedBackgroundIndicator">@drawable/uw_yellow_selector</item>
        <item name="drawerArrowStyle">@style/DrawerArrowToggle</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme" parent="AppCommon">
    </style>

    <style name="AppTheme.DialogWhenLarge" parent="Theme.AppCompat.Light.DialogWhenLarge">
    </style>

    <style name="DrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/black</item>
    </style>

    <style name="PropertyLayout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/property_layout_margin</item>
        <item name="android:layout_marginRight">@dimen/property_layout_margin</item>
    </style>

    <style name="PropertyLayout.Key">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PropertyLayout.Value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/action_bar_bg</item>
    </style>

</resources>
