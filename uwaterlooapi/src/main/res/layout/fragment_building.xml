<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ui.modules.buildings.BuildingFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
            android:id="@+id/building_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/uw_yellow"
            android:gravity="right|end"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingBottom="32dp"
            android:textSize="24sp"
            android:fontFamily="sans-serif-light"/>

    <ScrollView
            android:id="@+id/building_scrollview_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:fillViewport="true">

        <LinearLayout
                android:id="@+id/property_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:orientation="vertical">

            <com.deange.uwaterlooapi.sample.ui.view.SimplePropertyLayout
                    style="@style/PropertyLayout"
                    android:id="@+id/building_id"
                    android:tag="@string/building_building_id"/>

            <com.deange.uwaterlooapi.sample.ui.view.SimplePropertyLayout
                    style="@style/PropertyLayout"
                    android:id="@+id/building_code"
                    android:tag="@string/building_building_code"/>

            <com.deange.uwaterlooapi.sample.ui.view.SimplePropertyLayout
                    style="@style/PropertyLayout"
                    android:id="@+id/building_alternate_names"
                    android:tag="@string/building_alternate_names"/>

            <FrameLayout
                    android:id="@+id/building_map"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="16dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
