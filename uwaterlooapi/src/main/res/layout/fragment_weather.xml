<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="#EEEEEE">

        <com.deange.uwaterlooapi.sample.ui.view.SliceView
                android:id="@+id/weather_slider"
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:background="@drawable/card_view_background"
                android:padding="8dp"
                app:sliceHeight="64dp">

            <com.deange.uwaterlooapi.sample.ui.view.AutoScaleTextView
                    android:id="@+id/weather_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:includeFontPadding="false"
                    app:scaleFactor="50%"
                    app:maxTextSize="100sp"
                    app:fontName="Roboto-Thin"/>

        </com.deange.uwaterlooapi.sample.ui.view.SliceView>

        <com.deange.uwaterlooapi.sample.ui.view.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_below="@id/weather_slider">

            <com.deange.uwaterlooapi.sample.ui.view.TextFontView
                    android:id="@+id/weather_last_updated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textColor="#888"
                    android:textSize="12sp"
                    app:fontName="Roboto-LightItalic"/>

        </com.deange.uwaterlooapi.sample.ui.view.CardView>

    </RelativeLayout>

</ScrollView>
