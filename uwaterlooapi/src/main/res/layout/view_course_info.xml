<?xml version="1.0" encoding="utf-8"?>
<com.deange.uwaterlooapi.sample.ui.view.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:orientation="vertical"
            android:padding="16dp">

        <TextView
                android:id="@+id/course_info_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textAppearance="?textAppearanceSearchResultTitle"/>

        <TextView
                android:id="@+id/course_info_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:textAppearance="?textAppearanceSearchResultSubtitle"/>

    </LinearLayout>

</com.deange.uwaterlooapi.sample.ui.view.CardView>