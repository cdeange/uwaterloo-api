<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.deange.uwaterlooapi.sample.ui.view.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">

        <LinearLayout
                android:id="@+id/selectable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?attr/selectableItemBackground">

            <com.deange.uwaterlooapi.sample.ui.view.TextFontView
                    android:id="@+id/list_location_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textColor="#123456"
                    android:textSize="20sp"
                    app:fontName="Roboto-Light"/>

            <com.deange.uwaterlooapi.sample.ui.view.TextFontView
                    android:id="@+id/list_location_timing_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textStyle="bold"
                    app:fontName="Roboto-Light"/>

        </LinearLayout>

    </com.deange.uwaterlooapi.sample.ui.view.CardView>

</RelativeLayout>
